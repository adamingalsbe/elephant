<h1><%= User.find_by_id(session["user_id"]).first_name.capitalize %>'s Banks</h1>

<p><%= link_to 'Add a New Bank', new_bank_url %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% User.find_by_id(session["user_id"]).banks.each do |bank| %>
    <tr>
      <td><%= bank.name %></td>
      <td><%= bank.notes %></td>
      


      <td><%= link_to 'Show', bank_url(bank) %></td>
      <td><%= link_to 'Edit', edit_bank_url(bank) %></td>
      <td><%= link_to 'Destroy', bank_url(bank), method: 'delete', data: { confirm: "Do you really want to delete this bank?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

