<% if @user.errors.any? %>
  <div id="error_explanation">
      <div class="alert alert-error">
        Please resolve the following errors and try again.
      </div>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
