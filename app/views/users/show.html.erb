<h1><%= @user.first_name.capitalize unless @user.first_name.blank? %>'s Plan</h1>
<div class="row">
  <ul>
    <li>
      <b>First name:</b>
      <%= @user.first_name %>
    </li>

    <li>
      <b>Last name:</b>
      <%= @user.last_name %>
    </li>

    <li>
      <b>Email address:</b>
      <%= @user.email_address %>
      <% if @user.email_verified %>
        <i class="icon-ok"></i> Confirmed
        <% else %>
        <i class="icon-exclamation-sign"></i> <b>Email Address Not Confirmed</b>
        <% end %>
    </li>
  </ul>

<div style="float: right">
  <% if @user.id == session["user_id"] %>
  <%= link_to 'Edit My Profile', edit_user_url(@user), class: "btn" %>
    <%if @user.banks.any? %>
    <%= link_to 'Manage My Banks', banks_url, class: "btn" %>
    <% else %>
    <%= link_to 'Add a bank', new_bank_url(@user), class: "btn" %>
    <% end %>

  <%= link_to 'Manage My Helpers', relationships_url, class: 'btn btn-success' %>
  <% end %>
</div>
<div class="span8">
    <%if @user.banks.any? %>
    <h3> Banks </h3>

    <table class="table">
      <thead>
        <th>Bank Name</th>
        <th>Bank Notes</th>
        <th>&nbsp;</th>
      </thead>
      <tbody>
        <% @user.banks.each do |bank| %>
          <tr>
            <td><%= bank.name %></td>
            <td><%= bank.notes %></td>
            <td><% if @user.id == session["user_id"] %>
              <%= link_to 'Show Bank', bank, class: 'btn btn-small' %>
              <%end%></td>
          </tr>
        <% end %>
      </tbody>
    </div>
    <% end %>

